<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PaletteFragment">

    <GridLayout
        android:id="@+id/gridLayoutPalette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3" >

        <Button
            android:id="@+id/palette00"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#000"
            android:text="" />
        <Button
            android:id="@+id/palette01"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#888"
            android:text="" />
        <Button
            android:id="@+id/palette02"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#fff"
            android:text="" />
        <Button
            android:id="@+id/palette10"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="#f00"
            android:text="" />
        <Button
            android:id="@+id/palette11"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="#0f0"
            android:text="" />
        <Button
            android:id="@+id/palette12"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="#00f"
            android:text="" />
        <Button
            android:id="@+id/palette20"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#ff0"
            android:text="" />
        <Button
            android:id="@+id/palette21"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#0ff"
            android:text="" />
        <Button
            android:id="@+id/palette22"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#f0f"
            android:text="" />
    </GridLayout>

    <View
        android:id="@+id/viewPaletteColor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/gridLayoutPalette"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:layout_marginTop="50dp" />

</RelativeLayout>